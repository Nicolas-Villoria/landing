---
// src/pages/blog/[...slug].astro
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Generate static paths for all articles
export async function getStaticPaths() {
  const articles = await getCollection('articles', ({ data }) => {
    // Only include articles that don't have external links or download files
    return !data.draft && !data.externalLink && !data.downloadFile;
  });
  
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

// Get the article from props
const { article } = Astro.props as { article: CollectionEntry<'articles'> };

// Get the rendered content
const { Content } = await article.render();

// Format date function
function formatDate(date: Date): string {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return date.toLocaleDateString('es-ES', options);
}
---

<Layout title={`${article.data.title} | Dr. Villoria - Especialista en Aparato Digestivo`}>
  <Header />
  
  <main class="article-main">
    <div class="article-header" style={`background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)), url(${article.data.image})`}>
      <div class="container">
        <div class="article-category">{article.data.category}</div>
        <h1>{article.data.title}</h1>
        <p class="article-date">{formatDate(article.data.pubDate)}</p>
      </div>
    </div>
    
    <div class="article-back">
      <div class="container">
        <a href="/blog" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
          Volver a todos los art√≠culos
        </a>
      </div>
    </div>
    
    <article class="article-content">
      <div class="container">
        <div class="article-body">
          <Content />
        </div>
      </div>
    </article>
  </main>
  
  <Footer />
</Layout>

<style>
  .article-main {
    padding-bottom: 5rem;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .article-header {
    background-size: cover;
    background-position: center;
    color: white;
    padding: 8rem 0 4rem;
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .article-header h1 {
    font-size: 3rem;
    max-width: 900px;
    margin: 0 auto 1rem;
  }
  
  .article-category {
    display: inline-block;
    background-color: #4a90e2;
    color: white;
    font-size: 0.9rem;
    padding: 0.4rem 1.2rem;
    border-radius: 30px;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }
  
  .article-date {
    font-size: 1rem;
    opacity: 0.8;
  }
  
  .article-back {
    margin: 2rem 0;
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 2rem;
    background-color: transparent;
    color: #4a90e2;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 500;
    border: 1px solid #4a90e2;
    transition: all 0.3s ease;
    gap: 0.5rem;
  }
  
  .back-link:hover {
    background-color: rgba(74, 144, 226, 0.05);
    transform: translateY(-2px);
  }
  
  .back-link svg {
    transition: transform 0.2s ease;
  }
  
  .back-link:hover svg {
    transform: translateX(-3px);
  }
  
  .article-content {
    padding: 2rem 0;
  }
  
  .article-body {
    max-width: 800px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.7;
    color: #2d3748;
  }
  
  .article-body h1,
  .article-body h2,
  .article-body h3,
  .article-body h4,
  .article-body h5,
  .article-body h6 {
    margin: 2rem 0 1rem;
    color: #2c3e50;
    line-height: 1.3;
  }
  
  .article-body h1 {
    font-size: 2.5rem;
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 0.5rem;
  }
  
  .article-body h2 {
    font-size: 2rem;
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 0.3rem;
  }
  
  .article-body h3 {
    font-size: 1.6rem;
  }
  
  .article-body p {
    margin: 1.2rem 0;
  }
  
  .article-body ul,
  .article-body ol {
    margin: 1.2rem 0;
    padding-left: 2rem;
  }
  
  .article-body li {
    margin: 0.5rem 0;
  }
  
  .article-body blockquote {
    border-left: 4px solid #4a90e2;
    background-color: #f8f9fa;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
  }
  
  .article-body img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
  
  .article-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }
  
  .article-body th,
  .article-body td {
    border: 1px solid #e2e8f0;
    padding: 0.75rem;
    text-align: left;
  }
  
  .article-body th {
    background-color: #f8f9fa;
    font-weight: 600;
  }
  
  .article-body tr:nth-child(even) {
    background-color: #f8f9fa;
  }
  
  @media (max-width: 768px) {
    .article-header {
      padding: 6rem 0 3rem;
    }
    
    .article-header h1 {
      font-size: 2.2rem;
    }
    
    .article-body {
      font-size: 1rem;
    }
    
    .article-body h1 {
      font-size: 2rem;
    }
    
    .article-body h2 {
      font-size: 1.7rem;
    }
    
    .article-body h3 {
      font-size: 1.4rem;
    }
  }
</style>
